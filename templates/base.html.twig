<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Evénements, concerts, cabarets malgaches et sur Madagascar{% endblock %}</title>
        <link href="https://fonts.googleapis.com/css?family=Ubuntu&display=swap" rel="stylesheet">
        <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.12.1/css/all.min.css" rel="stylesheet">
        <link href="https://unpkg.com/tailwindcss@^1.0/dist/tailwind.min.css" rel="stylesheet">
        <link rel="stylesheet" href="https://unpkg.com/tippy.js@6/animations/scale.css" >
        {# 'app' must match the first argument to addEntry() in webpack.config.js #}
        {{ encore_entry_link_tags('app') }}
        <link rel="stylesheet" href="{{ asset('assets/css/styles.css') }}">
        {% block headertag %}{% endblock %}
    </head>
    <body class=" leading-normal tracking-normal">
    <div class="bg-red-800 border-b border-indigo-darkest bg-teal py-2 px-1">
        <div class="container mx-auto">
            <nav class="flex items-center justify-between flex-wrap">

                    <a class="flex items-center flex-no-shrink text-white mr-6" href="{{ path('frontend_default') }}">
                        <svg class="mt-3 mx-2"
                            xmlns:dc="http://purl.org/dc/elements/1.1/"
                            xmlns:cc="http://creativecommons.org/ns#"
                            xmlns:rdf="http://www.w3.org/1999/02/22-rdf-syntax-ns#"
                            xmlns:svg="http://www.w3.org/2000/svg"
                            xmlns="http://www.w3.org/2000/svg"
                             width="24"
                             height="37"
                             viewBox="0 0 14.287499 14.2875"
                            version="1.1"
                             >
                        <g
                                inkscape:groupmode="layer"
                                id="layer3"
                                inkscape:label="s"
                                transform="translate(0.73541382,-77.243716)">
                            <path
                                    style="fill:#ffffff;fill-opacity:1;stroke:none;stroke-width:0.02447266px;stroke-linecap:butt;stroke-linejoin:miter;stroke-opacity:1"
                                    d="m 13.552992,74.73149 c 0,0 -3.9573064,1.054767 -3.478528,2.856088 0.478777,1.80132 1.613525,6.641662 1.833998,8.207163 0.199041,1.413323 -12.6808035,1.481181 -12.6808035,1.481181 l 0.0467721,1.741122 c 0,0 13.2383524,-0.306794 13.9375834,-2.099166 0.603907,-1.548023 -1.353403,-7.01449 -1.448881,-7.703383 -0.239388,-1.727214 1.801281,-1.820931 1.801281,-1.820931 z"
                                    inkscape:connector-curvature="0"
                                    sodipodi:nodetypes="cssccsscc" />
                        </g>
                        <g
                                inkscape:label="Calque 1"
                                inkscape:groupmode="layer"
                                id="layer1"
                                transform="translate(0.73541382,-241.95204)"
                                style="display:inline">
                            <path
                                    style="fill:#ffffff;fill-opacity:1;stroke:none;stroke-width:0.03036975px;stroke-linecap:butt;stroke-linejoin:miter;stroke-opacity:1"
                                    d="m -0.81911366,249.98423 2.81615376,-10.55021 2.1250615,0.006 1.1437541,9.31957 2.041482,-9.3208 1.6826881,-0.003 2.2271792,10.53546 -2.2857745,0.34352 -0.8706073,-6.5904 -1.022808,6.25986 -3.7240028,0 -0.63998,-6.2692 -1.2809179,6.53242 z"
                                    inkscape:connector-curvature="0"
                                    sodipodi:nodetypes="cccccccccccccc" />
                        </g>
                    </svg>
                    <span class=" text-xl tracking-tight text-2xl">Madatsara</span>
                    </a>


                <div class="block sm:hidden">
                    <button class="hamburger hamburger--squeeze" type="button">
                      <span class="hamburger-box">
                        <span class="hamburger-inner "></span>
                      </span>
                    </button>


                </div>
                <div id="main-nav" class="w-full flex-grow sm:flex items-center sm:w-auto hidden">
                    <div class="sm:flex-grow"></div>
                    <div>
                        <a href="{{ path('frontend_contact') }}" class="no-underline block mt-4 sm:inline-block sm:mt-0 text-white hover:text-grey-light mr-4">
                            Contact
                        </a>
                        <a href="#" class="--bg-button no-underline inline-block text-sm px-4 py-2 leading-none rounded text-white hover:border-transparent hover:text-teal hover:bg-white lg:mt-0">Ajouter un événement <i class="fas fa-plus"></i> </a>
                    </div>
                </div>
            </nav>
        </div>
    </div>

    <div class="p-3">
        <div class="relative w-full px-3 mt-1 bg-gray-100 shadow rounded-lg flex">
            <i class="cursor-pointer fas fa-search self-center" data-tippy-content="Chercher"></i>
            <input data-search-field type="text" maxlength="255" class="bg-gray-100 w-full  outline-none border-0 p-3" placeholder="Chercher un événement ...">
            <i data-search-more class="cursor-pointer fas fa-sort-down ml-auto self-center" data-tippy-content="+ d'options"></i>
        </div>
        <div data-filter-autocomplete class="hidden relative w-full p-3 mb-1 border shadow flex">
            <span data-placeholder-autocomplete></span>
        </div>
        <div data-filter-more class="hidden relative w-full p-3 mb-1 border shadow flex">
            <div class="w-full mt-2">
                <div class="md:flex md:items-center mb-6">
                    <div class="w-1/12">
                        <label class="block text-gray-500 md:text-right mb-1 md:mb-0 pr-4" for="inline-full-name">
                            Artiste / Organisateur
                        </label>
                    </div>
                    <div class=" border-b w-full">
                        <input class="appearance-none bg-transparent border-none w-full text-gray-700 mr-3 py-1 px-2 leading-tight focus:outline-none" type="text" placeholder="" aria-label="">
                    </div>
                </div>
                <div class="md:flex md:items-center mb-6">
                    <div class="w-1/12" >
                        <label class="block text-gray-500 md:text-right mb-1 md:mb-0 pr-4" for="inline-username">
                            Lieu / Ville
                        </label>
                    </div>
                    <div class=" border-b w-full">
                        <input class="appearance-none bg-transparent border-none w-full text-gray-700 mr-3 py-1 px-2 leading-tight focus:outline-none" type="text" placeholder="" aria-label="">
                    </div>
                </div>
                <div class="md:flex md:items-center mb-6">
                    <div class="w-1/12" >
                        <label class="block text-gray-500 md:text-right mb-1 md:mb-0 pr-4" for="inline-username">
                            Date
                        </label>
                    </div>
                    <div class=" w-full">
                        <div class="flex flex-wrap ">
                            <div class="w-full md:w-1/2 ">
                                <select class="block w-full  border border-gray-200 text-gray-700 py-3 px-4 pr-8 rounded leading-tight focus:outline-none focus:bg-white focus:border-gray-500" id="grid-state">
                                    <option></option>
                                    <option>Ce week end</option>
                                    <option>La semaine prochaine</option>
                                    <option>Ce mois-ci</option>
                                    <option>Le mois prochain</option>
                                </select>
                            </div>
                            <div class="w-full md:w-1/2 px-3  border-b">
                                <input class="appearance-none bg-transparent border-none w-full text-gray-700 mr-3 py-1 px-2 leading-tight focus:outline-none" id="grid-last-name" type="text" placeholder="">
                            </div>
                        </div>
                    </div>
                </div>

                <div class="md:flex md:justify-end">

                        <a href="#" data-tippy-content="Reçevoir une alerte par email ?">
                            Créer une alerte
                        </a>
                        <button class="ml-2 shadow focus:shadow-outline focus:outline-none text-white --bg-button py-2 px-4 rounded" type="button">
                            Appliquer
                        </button>

                </div>
            </div>
        </div>

    </div>


    <div class="container p-3 bg-white md:mt-18">


        {% block body %}Contenu du block par défaut{% endblock %}
    </div>

        {% block endbody %}{% endblock %}

    <script src="https://unpkg.com/@popperjs/core@2"></script>
    <script src="https://unpkg.com/tippy.js@6"></script>
    <script src="{{ asset('assets/js/javascript.js') }}"></script>
    {# 'app' must match the first argument to addEntry() in webpack.config.js #}
    {{ encore_entry_script_tags('app') }}
    </body>
</html>
