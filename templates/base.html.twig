<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Evénements, concerts, cabarets malgaches et sur Madagascar{% endblock %}</title>
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link href="https://fonts.googleapis.com/css?family=Ubuntu&display=swap" rel="stylesheet">
        <link rel="icon" type="image/png" href="{{ asset('favicon.png') }}">
        <meta name="theme-color" content="#9b2c2c">
        <meta name="verify-v1" content="k8rL7/Zq2pa966Zh+/p1Gnw2lQxglkApa4IRYrXplW4=" >
        {% block headertag %}
            {# 'app' must match the first argument to addEntry() in webpack.config.js #}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
    </head>
    <body>
    <div id="holder">
        <header id="header-content" class="header">
            <a href="{{ path('frontend_default') }}" class="logo">
                <img src="{{ asset('build/images/logo.svg') }}" alt="">
                Madatsara
            </a>
            <div id="hamburger">
                <button  class="hamburger hamburger--squeeze" type="button">
                  <span class="hamburger-box">
                    <span class="hamburger-inner"></span>
                  </span>
                </button>
            </div>
            {% include '_partials/menu/main_nav.html.twig' %}
        </header>

        <section id="body-content" class="container">
            {% block body %}Contenu du block par défaut{% endblock %}
        </section>

        <footer id="footer-content" class="container display__grid">
             <div>
                {{ 'now' | date('Y') }} - Madatsara
             </div>
            <div class="justify-self__end">
             {% include '_partials/menu/footer_nav.html.twig' %}
            </div>
        </footer>
    </div>

    {% block endbody %}
        {# 'app' must match the first argument to addEntry() in webpack.config.js #}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
    </body>
</html>
