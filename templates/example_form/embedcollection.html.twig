{% extends 'base.html.twig' %}

{% block body %}
    {{ form_start(form) }}
    {# render the task's only field: description #}
    {{ form_row(form.task) }}

    <h3>Tags</h3>
    <ul class="tags">
        {# iterate over each existing tag and render its only field: name #}
        {% for tag in form.tags3 %}
            <li>{{ form_row(tag.name) }}</li>
        {% endfor %}
    </ul>
    {{ form_end(form) }}
{% endblock %}

